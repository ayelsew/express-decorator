{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "./",
    "allowJs": true,
    "target": "ES6",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "**/*"
  ]
}
{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "CommonJS",
    "emitDecoratorMetadata": true,
    "target": "ES5",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "jest.config.js"
  ]
}